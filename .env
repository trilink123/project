# Aurora Resume Agent - Production Environment Configuration
# 
# IMPORTANT: 
# 1. Copy this file to .env before deployment
# 2. Replace all placeholder values with your actual production values
# 3. Never commit .env files to version control
# 4. Keep these values secure and private

# =============================================================================
# AI CONFIGURATION
# =============================================================================
# Your Google AI API Key (Required)
GOOGLE_API_KEY=your_google_ai_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database Password
DB_PASSWORD=your_very_secure_db_password_here

# Full Database URL (if using external database)
DATABASE_URL=postgresql://aurora_user:your_db_password@your_db_host:5432/aurora_resume_db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# Redis Password
REDIS_PASSWORD=your_very_secure_redis_password_here

# Redis URL (if using external Redis)
REDIS_URL=redis://:your_redis_password@your_redis_host:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret Key (Generate a strong random key)
SECRET_KEY=your_super_secret_jwt_key_at_least_32_characters_long

# JWT Algorithm
ALGORITHM=HS256

# Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Backend Host and Port
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=production

# Logging Level
LOG_LEVEL=INFO

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Allowed Origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# =============================================================================
# CLOUD DEPLOYMENT SPECIFIC
# =============================================================================

# AWS Configuration (if deploying to AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your-aurora-files-bucket

# Azure Configuration (if deploying to Azure)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=aurora-files

# GCP Configuration (if deploying to GCP)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry DSN (for error tracking)
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# =============================================================================
# SSL CONFIGURATION
# =============================================================================
# SSL Certificate paths (if using custom SSL)
SSL_CERT_PATH=/etc/ssl/certs/aurora.crt
SSL_KEY_PATH=/etc/ssl/private/aurora.key
